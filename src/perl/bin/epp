#! /usr/bin/env perl

use strict;
use warnings;
use FindBin qw($Bin);
use lib ( -d "$Bin/../lib/perl5" ? "$Bin/../lib/perl5" : "$Bin/../lib" );
use Carp;
use English qw(-no_match_vars);
use Try::Tiny;

use wtsi_clarity::epp::mapper;
use wtsi_clarity::util::error_reporter;
our $VERSION = '0';

my $current_action;

try {
  my $process_url;
  my @actions;
  my @package_names = wtsi_clarity::epp::mapper->new_with_options()->package_names;

  # Creating the action object(s)
  foreach my $package_name (@package_names) {
    my $loaded = eval "require $package_name";
    if (!$loaded) {
      wtsi_clarity::util::error_reporter::croak( qq[Failed to require $package_name: $EVAL_ERROR]);
    }
    if (!defined $process_url) {
      push @actions, $package_name->new_with_options();
      $process_url = $actions[0]->process_url;
    } else {
      push @actions, $package_name->new_with_options(process_url=>$process_url);
    }
  }

  # Executing the instantiated actions one by one
  foreach my $action (@actions) {
    $current_action = $action;
    $current_action->run();
  }
} catch {
  my $error = $_;
  if ($error =~ /^\[ERROR\]/xms){ # already formatted properly
    croak $error;
  }
  croak wtsi_clarity::util::error_reporter::croak_with_stack($error);
};

0;

__END__

=head1 NAME

  epp

=head1 USAGE

  epp --action print_label --process_url http://some.com/process/456789 

=head1 CONFIGURATION

=head1 DESCRIPTION

=head1 REQUIRED ARGUMENTS

  --action
  --process_url

